<div class="col-md-4"></div>
<div class="col-md-4">
  <h3>Upload track</h3>
  <img width="100" height="100" src="<%= track.escape('image') %>">
  <p><a id="change-photo" href="#">Add photo...</a></p>
  <form>
    <div id="select-file" class="form-group"></div>
    <div class="form-group">
      <label for="track[title]">Title</label>
        <input type="text"
               id="track[title]"
               class="form-control"
               name="track[title]"
               value="<%= track.escape('title') %>">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<div class="col-md-4"></div>
